{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "MenuDocument": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Menus$MenuDocument"
        },
        "itemCollection": {
          "$ref": "#/definitions/MenuItemCollection"
        }
      },
      "required": [
        "$ID",
        "$Type",
        "itemCollection"
      ]
    },
    "MenuItemContainer": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Menus$MenuItemContainer"
        },
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/MenuItem"
          }
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    },
    "MenuItem": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Menus$MenuItem"
        },
        "caption": {
          "$ref": "texts.schema.json#/definitions/Text"
        },
        "icon": {
          "$ref": "pages.schema.json#/definitions/Icon"
        },
        "alternativeText": {
          "$ref": "texts.schema.json#/definitions/Text"
        },
        "action": {
          "$ref": "pages.schema.json#/definitions/ClientAction"
        }
      },
      "required": [
        "$ID",
        "$Type",
        "caption",
        "action"
      ]
    },
    "MenuItemCollection": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Menus$MenuItemCollection"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    }
  }
}