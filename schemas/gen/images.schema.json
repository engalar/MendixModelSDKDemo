{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Image": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Images$Image"
        },
        "name": {
          "type": "string",
          "default": ""
        },
        "imageData": {
          "type": "string",
          "contentEncoding": "base64"
        },
        "imageFormat": {
          "type": "string",
          "enum": [
            "Unknown",
            "Png",
            "Jpg",
            "Bmp",
            "Gif",
            "Svg",
            "Webp"
          ]
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    },
    "ImageCollection": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Images$ImageCollection"
        },
        "images": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Image"
          }
        }
      },
      "required": [
        "$ID",
        "$Type"
      ],
      "allOf": [
        {
          "$ref": "projects.schema.json#/definitions/Document"
        }
      ]
    }
  }
}