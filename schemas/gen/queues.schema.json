{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "QueueConfig": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Queues$QueueConfig"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    },
    "BasicQueueConfig": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Queues$BasicQueueConfig"
        },
        "parallelismExpression": {
          "type": "string"
        },
        "clusterWide": {
          "type": "boolean"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    },
    "Queue": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Queues$Queue"
        },
        "config": {
          "$ref": "#/definitions/QueueConfig"
        }
      },
      "required": [
        "$ID",
        "$Type",
        "config"
      ]
    },
    "QueueRetry": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Queues$QueueRetry"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    },
    "QueueExponentialRetry": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Queues$QueueExponentialRetry"
        },
        "retries": {
          "type": "string"
        },
        "initialInterval": {
          "type": "string"
        },
        "maximumInterval": {
          "type": "string"
        },
        "intervalType": {
          "type": "string",
          "enum": [
            "Seconds",
            "Minutes",
            "Hours"
          ]
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    },
    "QueueFixedRetry": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Queues$QueueFixedRetry"
        },
        "retries": {
          "type": "string"
        },
        "interval": {
          "type": "string"
        },
        "intervalType": {
          "type": "string",
          "enum": [
            "Seconds",
            "Minutes",
            "Hours"
          ]
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    },
    "QueueSettings": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Queues$QueueSettings"
        },
        "queue": {
          "type": "string",
          "description": "#/definitions/Queue"
        },
        "retry": {
          "$ref": "#/definitions/QueueRetry"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    }
  }
}