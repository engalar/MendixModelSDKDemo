          "description": "pages.schema.json#/definitions/IPage"
        }
      },
      "required": [
        "$ID",
        "$Type",
        "caption"
      ]
    },
    "NativeLayout": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "NativePages$NativeLayout"
        },
        "widgets": {
          "type": "array",
          "items": {
            "$ref": "pages.schema.json#/definitions/Widget"
