{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "HomePageBase": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Navigation$HomePageBase"
        },
        "page": {
          "type": "string",
          "description": "ByNameReferenceProperty: pages.schema.json#/definitions/Page"
        },
        "microflow": {
          "type": "string",
          "description": "ByNameReferenceProperty: microflows.schema.json#/definitions/Microflow"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    },
    "HomePage": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Navigation$HomePage"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/HomePageBase"
        }
      ]
    },
    "NativeHomePageBase": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Navigation$NativeHomePageBase"
        },
        "homePagePage": {
          "type": "string",
          "description": "ByNameReferenceProperty: pages.schema.json#/definitions/Page"
        },
        "homePageNanoflow": {
          "type": "string",
          "description": "ByNameReferenceProperty: microflows.schema.json#/definitions/Nanoflow"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    },
    "NativeHomePage": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Navigation$NativeHomePage"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/NativeHomePageBase"
        }
      ]
    },
    "NavigationProfileBase": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Navigation$NavigationProfileBase"
        },
        "name": {
          "type": "string",
          "default": ""
        },
        "offlineEntityConfigs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/OfflineEntityConfig"
          }
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    },
    "NativeNavigationProfile": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Navigation$NativeNavigationProfile"
        },
        "otaEnabled": {
          "type": "boolean",
          "default": false
        },
        "loggingEnabled": {
          "type": "boolean",
          "default": false
        },
        "encryptionDbEnabled": {
          "type": "boolean",
          "default": false
        },
        "localFileEncryptionEnabled": {
          "type": "boolean",
          "default": false
        },
        "applyScreenTransition": {
          "type": "boolean",
          "default": false
        },
        "hermesEnabled": {
          "type": "boolean",
          "default": false
        },
        "nativeHomePage": {
          "$ref": "#/definitions/NativeHomePage"
        },
        "roleBasedNativeHomePages": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RoleBasedNativeHomePage"
          }
        },
        "bottomBarItems": {
          "type": "array",
          "items": {
            "$ref": "nativepages.schema.json#/definitions/BottomBarItem"
          }
        },
        "screenNavigationTransition": {
          "type": "string",
          "enum": [
            "SystemDefault",
            "SlideFromRightIOS",
            "ScaleFromCenterAndroid"
          ]
        },
        "popupNavigationTransition": {
          "type": "string",
          "enum": [
            "SystemDefault",
            "ModalPresentationIOS",
            "BottomSheetAndroid"
          ]
        }
      },
      "required": [
        "$ID",
        "$Type",
        "nativeHomePage"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/NavigationProfileBase"
        }
      ]
    },
    "NavigationDocument": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Navigation$NavigationDocument"
        },
        "profiles": {
          "type": "array",
          "items": {
            "onOf": [
              {
                "$ref": "#/definitions/NavigationProfileBase"
              },
              {
                "$ref": "#/definitions/NativeNavigationProfile"
              },
              {
                "$ref": "#/definitions/NavigationProfile"
              }
            ]
          }
        }
      },
      "required": [
        "$ID",
        "$Type"
      ],
      "allOf": [
        {
          "$ref": "projects.schema.json#/definitions/ProjectDocument"
        }
      ]
    },
    "NavigationProfile": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Navigation$NavigationProfile"
        },
        "kind": {
          "type": "string",
          "enum": [
            "Responsive",
            "ResponsiveOffline",
            "HybridTablet",
            "HybridTabletOffline",
            "HybridPhone",
            "HybridPhoneOffline",
            "Tablet",
            "TabletOffline",
            "Phone",
            "PhoneOffline",
            "NativePhone",
            "Hybrid",
            "HybridOffline"
          ]
        },
        "homePage": {
          "$ref": "#/definitions/HomePage"
        },
        "roleBasedHomePages": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RoleBasedHomePage"
          }
        },
        "appTitle": {
          "$ref": "texts.schema.json#/definitions/Text"
        },
        "appIcon": {
          "type": "string",
          "description": "ByNameReferenceProperty: images.schema.json#/definitions/Image"
        },
        "loginPageSettings": {
          "$ref": "pages.schema.json#/definitions/PageSettings"
        },
        "menuItemCollection": {
          "$ref": "menus.schema.json#/definitions/MenuItemCollection"
        },
        "progressiveWebAppSettings": {
          "$ref": "#/definitions/ProgressiveWebAppSettings"
        },
        "notFoundHomepage": {
          "$ref": "#/definitions/NotFoundHomePage"
        }
      },
      "required": [
        "$ID",
        "$Type",
        "homePage",
        "appTitle",
        "loginPageSettings",
        "menuItemCollection"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/NavigationProfileBase"
        }
      ]
    },
    "NotFoundHomePage": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Navigation$NotFoundHomePage"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/HomePageBase"
        }
      ]
    },
    "OfflineEntityConfig": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Navigation$OfflineEntityConfig"
        },
        "constraint": {
          "type": "string",
          "default": ""
        },
        "entity": {
          "type": "string",
          "description": "ByNameReferenceProperty: domainmodels.schema.json#/definitions/Entity"
        },
        "syncMode": {
          "type": "string",
          "enum": [
            "All",
            "Constrained",
            "None",
            "NoneAndPreserveData",
            "Never",
            "Online"
          ]
        }
      },
      "required": [
        "$ID",
        "$Type",
        "entity"
      ]
    },
    "ProgressiveWebAppSettings": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Navigation$ProgressiveWebAppSettings"
        },
        "precaching": {
          "type": "boolean",
          "default": false
        },
        "installPrompt": {
          "type": "boolean",
          "default": true
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    },
    "RoleBasedHomePage": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Navigation$RoleBasedHomePage"
        },
        "userRole": {
          "type": "string",
          "description": "ByNameReferenceProperty: security.schema.json#/definitions/UserRole"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/HomePageBase"
        }
      ]
    },
    "RoleBasedNativeHomePage": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Navigation$RoleBasedNativeHomePage"
        },
        "userRole": {
          "type": "string",
          "description": "ByNameReferenceProperty: security.schema.json#/definitions/UserRole"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/NativeHomePageBase"
        }
      ]
    }
  }
}