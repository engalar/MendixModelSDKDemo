{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "SystemText": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Texts$SystemText"
        },
        "text": {
          "$ref": "#/definitions/Text"
        },
        "key": {
          "type": "string"
        }
      },
      "required": [
        "$ID",
        "$Type",
        "text"
      ]
    },
    "SystemTextCollection": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Texts$SystemTextCollection"
        },
        "systemTexts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SystemText"
          }
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    },
    "Text": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Texts$Text"
        },
        "translations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Translation"
          }
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    },
    "Translation": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Texts$Translation"
        },
        "languageCode": {
          "type": "string"
        },
        "text": {
          "type": "string"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    }
  }
}