{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ReportWidget": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Reports$ReportWidget"
        },
        "generateOnLoad": {
          "type": "boolean",
          "default": true
        },
        "dataSet": {
          "type": "string",
          "description": "ByNameReferenceProperty: datasets.schema.json#/definitions/DataSet"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ],
      "allOf": [
        {
          "$ref": "pages.schema.json#/definitions/Widget"
        }
      ]
    },
    "BasicReport": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Reports$BasicReport"
        },
        "showExportButton": {
          "type": "boolean",
          "default": false
        },
        "isPagingEnabled": {
          "type": "boolean",
          "default": false
        },
        "pageSize": {
          "type": "integer",
          "default": 20
        },
        "columns": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/BasicReportColumn"
          }
        },
        "aggregates": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/BasicReportAggregate"
          }
        },
        "zoomInfo": {
          "$ref": "#/definitions/ReportZoomInfo"
        }
      },
      "required": [
        "$ID",
        "$Type",
        "zoomInfo"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/ReportWidget"
        }
      ]
    },
    "BasicReportAggregate": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Reports$BasicReportAggregate"
        },
        "caption": {
          "$ref": "texts.schema.json#/definitions/Text"
        },
        "aggregateFunction": {
          "type": "string",
          "enum": [
            "Sum",
            "Average",
            "Count",
            "Minimum",
            "Maximum"
          ]
        },
        "applicablePerColumn": {
          "type": "string"
        }
      },
      "required": [
        "$ID",
        "$Type",
        "caption"
      ]
    },
    "BasicReportColumn": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Reports$BasicReportColumn"
        },
        "dataSetColumnName": {
          "type": "string",
          "default": ""
        },
        "width": {
          "type": "integer",
          "default": 1
        },
        "caption": {
          "$ref": "texts.schema.json#/definitions/Text"
        },
        "alignment": {
          "type": "string"
        },
        "format": {
          "type": "string",
          "enum": [
            "Default",
            "MonthName",
            "WeekdayName"
          ]
        }
      },
      "required": [
        "$ID",
        "$Type",
        "caption"
      ]
    },
    "ReportButton": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Reports$ReportButton"
        },
        "caption": {
          "$ref": "texts.schema.json#/definitions/Text"
        }
      },
      "required": [
        "$ID",
        "$Type",
        "caption"
      ],
      "allOf": [
        {
          "$ref": "pages.schema.json#/definitions/Widget"
        }
      ]
    },
    "ReportChart": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Reports$ReportChart"
        },
        "xAxisColumn": {
          "type": "string",
          "default": ""
        },
        "yAxisPrecision": {
          "type": "integer",
          "default": 2
        },
        "yAxisUseMinMax": {
          "type": "boolean",
          "default": false
        },
        "yAxisMinimum": {
          "type": "number",
          "default": 0
        },
        "yAxisMaximum": {
          "type": "number",
          "default": 0
        },
        "type": {
          "type": "string",
          "enum": [
            "VerticalBars",
            "VerticalBars3D",
            "HorizontalBars",
            "Lines",
            "Area"
          ]
        },
        "seriess": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ReportChartSeries"
          }
        },
        "xAxisCaption": {
          "$ref": "texts.schema.json#/definitions/Text"
        },
        "yAxisCaption": {
          "$ref": "texts.schema.json#/definitions/Text"
        },
        "xAxisFormat": {
          "type": "string",
          "enum": [
            "Default",
            "MonthName",
            "WeekdayName"
          ]
        },
        "aspectRatio": {
          "type": "string",
          "enum": [
            "SixteenToNine",
            "ThreeToTwo",
            "FourToThree",
            "OneToOne",
            "ThreeToFour",
            "TwoToThree",
            "NineToSixteen"
          ]
        }
      },
      "required": [
        "$ID",
        "$Type",
        "xAxisCaption",
        "yAxisCaption"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/ReportWidget"
        }
      ]
    },
    "ReportChartSeries": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Reports$ReportChartSeries"
        },
        "dataSetColumn": {
          "type": "string",
          "default": ""
        },
        "caption": {
          "$ref": "texts.schema.json#/definitions/Text"
        }
      },
      "required": [
        "$ID",
        "$Type",
        "caption"
      ]
    },
    "ReportDateRangeField": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Reports$ReportDateRangeField"
        },
        "caption": {
          "$ref": "texts.schema.json#/definitions/Text"
        },
        "type": {
          "type": "string",
          "enum": [
            "Year",
            "Month",
            "Week",
            "Period",
            "Quarter"
          ]
        }
      },
      "required": [
        "$ID",
        "$Type",
        "caption"
      ]
    },
    "ReportParameter": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Reports$ReportParameter"
        },
        "parameter": {
          "type": "string",
          "description": "ByNameReferenceProperty: datasets.schema.json#/definitions/DataSetParameter"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ],
      "allOf": [
        {
          "$ref": "pages.schema.json#/definitions/Widget"
        }
      ]
    },
    "ReportDateRangeSelector": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Reports$ReportDateRangeSelector"
        },
        "minYear": {
          "type": "integer",
          "default": 0
        },
        "maxYear": {
          "type": "integer",
          "default": 0
        },
        "fieldsPerRow": {
          "type": "integer",
          "default": 3
        },
        "showFromToRange": {
          "type": "boolean",
          "default": true
        },
        "fields": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ReportDateRangeField"
          }
        },
        "fromCaption": {
          "$ref": "texts.schema.json#/definitions/Text"
        },
        "toCaption": {
          "$ref": "texts.schema.json#/definitions/Text"
        }
      },
      "required": [
        "$ID",
        "$Type",
        "fromCaption",
        "toCaption"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/ReportParameter"
        }
      ]
    },
    "ReportDropDown": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Reports$ReportDropDown"
        },
        "attribute": {
          "type": "string",
          "description": "ByNameReferenceProperty: domainmodels.schema.json#/definitions/Attribute"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/ReportParameter"
        }
      ]
    },
    "ReportPane": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Reports$ReportPane"
        },
        "generateOnLoad": {
          "type": "boolean",
          "default": false
        },
        "parameterWidget": {
          "$ref": "pages.schema.json#/definitions/Widget"
        },
        "reportWidget": {
          "$ref": "pages.schema.json#/definitions/Widget"
        }
      },
      "required": [
        "$ID",
        "$Type"
      ],
      "allOf": [
        {
          "$ref": "pages.schema.json#/definitions/Widget"
        }
      ]
    },
    "ReportZoomInfo": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Reports$ReportZoomInfo"
        },
        "targetPage": {
          "type": "string",
          "description": "ByNameReferenceProperty: pages.schema.json#/definitions/Page"
        },
        "mappings": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ReportZoomMapping"
          }
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    },
    "ReportZoomMapping": {
      "type": "object",
      "properties": {
        "$ID": {
          "$ref": "../common.schema.json#/definitions/Identifiable"
        },
        "$Type": {
          "type": "string",
          "const": "Reports$ReportZoomMapping"
        },
        "targetParameterName": {
          "type": "string",
          "default": ""
        },
        "sourceReportColumnName": {
          "type": "string",
          "default": ""
        }
      },
      "required": [
        "$ID",
        "$Type"
      ]
    }
  }
}