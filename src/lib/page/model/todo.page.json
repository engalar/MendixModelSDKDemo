{
    "page": {
        "name": "TodoApp_CreatePage",
        "canvasWidth": 1200,
        "title": {
            "languageCode": "en_US",
            "text": "Create TODO Item"
        },
        "layout": {
            "name": "DefaultLayout",
            "arguments": [
                {
                    "parameter": "MainContent",
                    "widgets": [
                        {
                            "type": "Form",
                            "name": "todoForm",
                            "appearance": {
                                "class": "form-container"
                            },
                            "rows": [
                                {
                                    "columns": [
                                        {
                                            "weight": 1,
                                            "widgets": [
                                                {
                                                    "type": "TextBox",
                                                    "name": "titleInput",
                                                    "appearance": {
                                                        "class": "input-title"
                                                    },
                                                    "label": {
                                                        "languageCode": "en_US",
                                                        "text": "Title"
                                                    },
                                                    "placeholder": {
                                                        "languageCode": "en_US",
                                                        "text": "Enter TODO title"
                                                    }
                                                },
                                                {
                                                    "type": "TextArea",
                                                    "name": "descriptionInput",
                                                    "appearance": {
                                                        "class": "input-description"
                                                    },
                                                    "label": {
                                                        "languageCode": "en_US",
                                                        "text": "Description"
                                                    },
                                                    "placeholder": {
                                                        "languageCode": "en_US",
                                                        "text": "Enter TODO description"
                                                    }
                                                },
                                                {
                                                    "type": "DatePicker",
                                                    "name": "dueDateInput",
                                                    "appearance": {
                                                        "class": "input-due-date"
                                                    },
                                                    "label": {
                                                        "languageCode": "en_US",
                                                        "text": "Due Date"
                                                    }
                                                },
                                                {
                                                    "type": "Button",
                                                    "name": "submitButton",
                                                    "appearance": {
                                                        "class": "button-submit"
                                                    },
                                                    "caption": {
                                                        "languageCode": "en_US",
                                                        "text": "Create"
                                                    },
                                                    "action": "submitForm"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "allowedRoles": ["TodoApp.User"]
    }
}
